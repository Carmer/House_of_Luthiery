<div class="container">
  <h3>Log In, Yo</h3>
  <div class="row">
    <div class="col s6 offset-s3">
      <%= form_for @user, url: "/admin/login" do |f| %>
        <%= f.text_field :passphrase, placeholder: "passphrase" %>
        <%= f.password_field :password, placeholder: "password" %>
        <%= f.submit "Log in and Make Some Sweet Sweet Sounds...", class: "black-text" %>
      <% end %>
    </div>
  </div>
</div>
